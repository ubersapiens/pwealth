<script src='https://www.google.com/recaptcha/api.js'></script>
<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Your name' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email, 'Your email' %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone_number, 'Your phone number' %><br>
    <%= f.text_field :phone_number %>
  </div>
  <div class="field">
    <%= f.label :message, 'Enter your message or question' %><br>
    <%= f.text_area :message %>
  </div>
  <div class="g-recaptcha" data-sitekey="6LcsWjgUAAAAABiMb0YWii4rj7cBdg2T-xoww-xf"></div>
  <div class="actions">
    <%= f.submit 'Submit' %>
  </div>
<% end %>
