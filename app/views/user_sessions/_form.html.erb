<%= form_tag user_sessions_path, :method => :post do %>
  <div class="field">
    <%= text_field_tag :email, nil, :placeholder => "Email" %>
  </div>
  <div class="field">
    <%= password_field_tag :password, nil, :placeholder => "Password" %>
  </div>
  <div class="actions">
    <%= submit_tag 'Enter', :class => 'btn-success' %>
  </div>
<% end %>
